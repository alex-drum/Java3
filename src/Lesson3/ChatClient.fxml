<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.web.WebView?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="ChatController">
   <BorderPane prefHeight="342.0" prefWidth="553.0">
      <center>
          <WebView fx:id="messageArea" focusTraversable="false" prefHeight="135.0" prefWidth="42.0" BorderPane.alignment="CENTER" />
      </center>
      <left>
         <ListView fx:id="nickList" prefHeight="315.0" prefWidth="124.0" BorderPane.alignment="CENTER" />
      </left>
      <bottom>
         <FlowPane prefHeight="27.0" prefWidth="241.0" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="newMessage" onAction="#sendMessageTypeAction" prefHeight="26.0" prefWidth="492.0" />
                <Button fx:id="sendButton" onAction="#sendMessageTypeAction" text="Send" />
            </children>
         </FlowPane>
      </bottom>
   </BorderPane>
</AnchorPane>
